<?xml version="1.0" encoding="utf-8"?>
<Exports xmlns="http://schemas.itin.com/export/engine/2014/configuration/v1.0">

  <Global.Resources>
    <Hosts>
      <Host Key="xlsx"/>
    </Hosts>
    <Styles>
      <Style Name="HeaderStyle">
        <Content Color="#D7EEF7">
          <Text/>
        </Content>
        <Font Bold="Yes"/>
      </Style>
      <Style Name="AggregateStyle" Inherits="HeaderStyle">
        <Content>
          <Alignment Horizontal="Right"/>
          <Number Decimals="1"/>
        </Content>
      </Style>
      <Style Name="ValueTextStyle">
        <Content Color="#B6DDE9">
          <Text/>
        </Content>
      </Style>
      <Style Name="NumericStandardStyle">
        <Content Color="#B6DDE9" AlternateColor="#D7EEF7">
          <Alignment Horizontal="Right"/>
          <Number Decimals="1"/>
        </Content>
      </Style>
      <Style Name="NumericStandardWithBorderStyle" Inherits="NumericStandardStyle">
        <Borders>
          <Border Position="Top" Color="Black" LineStyle="Continuous" Weight="Thin"/>
        </Borders>
        <Content Color="#B6DDE9">
          <Alignment Horizontal="Right"/>
          <Number/>
        </Content>
      </Style>
      <Style Name="NumericWithoutDecimalsStyle" Inherits="NumericStandardStyle">
        <Content Color="#B6DDE9">
          <Number Decimals="0"/>
        </Content>
      </Style>
      <Style Name="NumericWithoutDecimalsWithBorderStyle" Inherits="NumericStandardWithBorderStyle">
        <Content Color="#B6DDE9">
          <Number Decimals="1"/>
        </Content>
      </Style>
    </Styles>
  </Global.Resources>

  <Export Name="sample4" Current="Yes">
    <Description>Sample 4 - A table linked to a stacked area chart</Description>
    <Table Host="xlsx"
           Name="Product"
           AutoFilter="Yes"
           AutoFitColumns="Yes"
           Alias="Stacked area chart">
      <Exporter>
        <Writer Name="XlsxTabularWriter"/>
      </Exporter>
      <Fields>
        <Field Name="ID" Alias="ID">
          <Header Style="HeaderStyle"/>
          <Value Style="NumericStandardStyle"/>            
          <Aggregate Location="Bottom" Type="Text" Style="HeaderStyle" Text="Total" Show="Yes"/>
        </Field>
        <Field Name="PRODUCT" Alias="Product">
          <Header Style="HeaderStyle"/>
          <Value Style="ValueTextStyle"/>
          <Aggregate Location="Bottom" Type="Sum" Style="AggregateStyle" Show="Yes"/>
        </Field>
        <Field Name="STOCK" Alias="Items in Stock">
          <Header Style="HeaderStyle"/>
          <Value Style="NumericStandardStyle"/>
          <Aggregate Location="Bottom" Type="Sum" Style="AggregateStyle" Show="Yes"/>
        </Field>
        <Field Name="PURCHASEPRICE" Alias="Purchase Price">
          <Header Style="HeaderStyle"/>
          <Value Style="NumericStandardStyle"/>
          <Aggregate Location="Bottom" Type="Sum" Style="AggregateStyle" Show="Yes"/>
        </Field>
        <Field Name="PRICE" Alias="Price">
          <Header Style="HeaderStyle"/>
          <Value Style="NumericStandardStyle"/>
          <Aggregate Location="Bottom" Type="Sum" Style="AggregateStyle" Show="Yes"/>
        </Field>
        <Field Name="PROFIT" Alias="Profit">
          <Header Style="HeaderStyle"/>
          <Value Style="NumericStandardStyle"/>
          <Aggregate Location="Bottom" Type="Sum" Style="AggregateStyle" Show="Yes"/>
        </Field>
      </Fields>
      <Charts>
        <Chart Size="800 600">
          <Location>
            <ByCoordenates Coordenates="11 1"/>
          </Location>
          <Legend Show="Yes">
            <Border Show="Yes"/>
            <Font Size="12" Bold="Yes"/>
          </Legend>
          <Axes>
            <Primary>
              <Values GridLines="Major"/>
            </Primary>
          </Axes>
          <Plots>
            <Plot Name="plot1">
              <Series>
                <Serie Type="ColumnStacked" Axis="PRODUCT" Field="PROFIT" Name="Profit" Color="#285A8F"/>
                <Serie Type="ColumnStacked" Axis="PRODUCT" Field="PURCHASEPRICE" Name="Purchase Price" Color="#336EA9"/>
              </Series>
            </Plot>
            <Plot UseSecondaryAxis="Yes" Name="plot2">
              <Series>
                <Serie Type="Line" Axis="PRODUCT" Field="STOCK" Name="Items in Stock" Color="Gray"/>
              </Series>
            </Plot>
          </Plots>
        </Chart>
      </Charts>
      <Output>
        <Path>~\output\EPPlusSamples\</Path>
        <File>sample04-from-config-file</File>
      </Output>
    </Table>
  </Export>

</Exports>
